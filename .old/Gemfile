source "https://rubygems.org"
ruby RUBY_VERSION

# NOTE to install nokogiri in osx with brew, run:
#   $ brew install libxml2
#   $ bundle config build.nokogiri "--use-system-libraries --with-xml2-include=$(brew --prefix)/opt/libxml2/include/libxml2"
#   $ bundle

# use same set of jekyll plugins to github page
group :jekyll_plugins do
  gem "github-pages"
end
